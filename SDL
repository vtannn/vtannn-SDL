#include<iostream>
#include<SDL.h>
#include<SDL_image.h>
#include "defs.h"
#include"graphics.h"
void waitUntilKeypressed()
{
    SDL_Event e;
    while(true)
    {
        if(SDL_PollEvent(&e)!=0&&
           (e.type==SDL_KEYDOWN||e.type==SDL_QUIT)) return;
        SDL_Delay(100);
    }
}
int main(int argc,char* args[])
{
    Graphics graphics;
    graphics.init();

    SDL_Texture* background=graphics.loadTexture("bikiniBottom.jpg");
    graphics.prepareScene(background);
    graphics.presentRenderer();
    waitUntilKeypressed();

    SDL_Texture* sponge=graphics.loadTexture("Spongebob.png");
    graphics.renderTexture(sponge,170,200);
    graphics.presentRenderer();
    waitUntilKeypressed();
    graphics.quit();
}
